# SmartStudy Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Database
# For local dev (SQLite):
DATABASE_URL=sqlite:///./smartstudy.db
# For production (PostgreSQL on Railway):
# DATABASE_URL=postgresql://user:pass@host:5432/smartstudy

# JWT Auth
SECRET_KEY=change-this-to-a-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Cloudinary (proof image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
